<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.nickname_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.gender_field :gender, autofocus: true, autocomplete: "gender" %>
  </div>

  <div class="field">
    <%= f.label :height %><br />
    <%= f.height_field :, autofocus: true, autocomplete: "height" %>
  </div>

  <div class="field">
    <%= f.label :body_weight %><br />
    <%= f.body_weight_field :, autofocus: true, autocomplete: "body_weight" %>
  </div>

  <div class="field">
    <%= f.label :born_on %><br />
    <%= f.born_on_field :, autofocus: true, autocomplete: "born_on" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
